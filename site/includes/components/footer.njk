<div class="footer-wrapper">

    <footer id="footer" class="footer text-center md:text-left bg-uublack text-white" role="contentinfo">

        <div class="footer-inner container m-auto flex flex-col md:flex-row md:justify-between items-center px-6 py-10">
            <div>
                <div></div>
                <div class="hidden md:block text-xs mt-12">&copy; Copyright 2020 {{ site.nameHtml | safe }}</div>
            </div>            
            <div class="mt-8 md:mt-0 md:text-right text-sm md:text-base">
                <p><strong>{{ site.nameHtml | safe }}</strong></p>
                <div class="leading-tight mb-6">
                    <div>{{ site.address.street }}, {{ site.address.street_2 }}</div>
                    <div>{{ site.address.city }}, {{ site.address.state }} {{ site.address.postcode }}</div>
                </div>
                <div class="leading-tight mb-6">
                    <a class="block" href="{{ site.contact.phone }}">{{ site.contact.phone }}</a>
                    <a class="block" href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a>
                </div>
                {% include 'components/social-icons.njk' %}
                <div class="md:hidden text-xs mt-8">&copy; Copyright 2020 {{ site.nameHtml | safe }}</div>
            </div>
        </div>
    </footer>

</div>
