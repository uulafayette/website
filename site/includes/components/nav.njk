<nav id="nav" class="nav hidden md:flex">

    <ul class="menu flex flex-col md:flex-row items-center list-reset text-sm text-right">

        {% for item in navigation.main %}

        <li class="level-1 mb-4 md:ml-8 md:mb-0">

            <a href="{{ item.url | safe }}" class="link uppercase font-semibold hover:text-uuorange active:border-b-2 border-uuorange {% if page.url == item.url %}active border-b-2{% endif %}
            "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

        </li>

        {% endfor %}

    </ul>

</nav>
